<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/edittext_bg"
        android:layout_centerHorizontal="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_name_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/ColourPrimary"
            android:layout_below="@+id/user_name_search"/>
        <TextView
            android:id="@+id/profile_user_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user profile name"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/ColourPrimary"
            android:layout_below="@+id/user_profile_name"/>
        <Button
            android:id="@+id/follow_btn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/profile_user_full_name"
            android:layout_centerHorizontal="true"
            android:text="Follow"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_bg"
            />

    </RelativeLayout>

</RelativeLayout>